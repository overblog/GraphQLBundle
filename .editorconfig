root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.md]
indent_size = 4
trim_trailing_whitespace = false

[*.mk,Makefile]
indent_style = tab

[*.{php,yml,yaml}]
indent_size = 4

[.github/workflows/*.yml]
indent_size = 2
